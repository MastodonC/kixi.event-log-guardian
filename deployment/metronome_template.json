{
  "id": "@@JOB_NAME@@",
  "description": "@@JOB_NAME@@",
  "labels": {
    "owner": "@@OWNER@@"
  },
  "run": {
      "cpus": 0.5,
      "mem": 512,
      "disk": 0,
      "restart": {
          "policy": "NEVER",
          "activeDeadlineSeconds": 0
      },
      "docker": {
          "image": "mastodonc/kixi.event-log-guardian:@@VERSION@@"
      },
      "env": {
          "BUCKET_NAME": "@@BUCKET_NAME@@",
          "REGION": "@@REGION@@",
          "STREAM_NAME": "@@STREAM_NAME@@"
      }
  },
  "schedules": [
          {
              "id": "check-event-safety-nightly",
              "enabled": true,
              "cron": "0 4 * * *",
              "timezone": "UTC"
          }
      ]

}
